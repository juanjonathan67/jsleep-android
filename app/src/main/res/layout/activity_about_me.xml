<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMeActivity">

    <TextView
        android:id="@+id/account_details"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="13dp"
        android:text="Account Details"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/account_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/account_name_2"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_details" />

    <TextView
        android:id="@+id/account_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Juan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/account_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:text="Email"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/account_email"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_name" />

    <TextView
        android:id="@+id/account_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:text="juan@gmail.com"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_name_2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Balance"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="0.0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <EditText
        android:id="@+id/top_up_amount"
        android:layout_width="181dp"
        android:layout_height="56dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="345dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/top_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/top_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="337dp"
        android:text="TOP UP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/top_up_amount"
        app:layout_constraintTop_toBottomOf="@+id/account_balance" />

    <RelativeLayout
        android:id="@+id/RenterLayout"
        android:layout_width="422dp"
        android:layout_height="347dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_up_amount"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/registerFormLayout"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:elevation="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextRenterName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextRenterAddress"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextRenterPhone"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone" />

        </LinearLayout>

        <Button
            android:id="@+id/cancelFormButton"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="50dp"
            android:elevation="0dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/registerFormButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="225dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="50dp"
            android:elevation="0dp"
            android:text="Register" />

        <Button
            android:id="@+id/registerRenterButton"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="280dp"
            android:elevation="1dp"
            android:text="REGISTER RENTER" />

        <RelativeLayout
            android:id="@+id/RenterNotNull"
            android:layout_width="310dp"
            android:layout_height="267dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/textViewRenterAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                android:text="Address"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewRenterName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                android:text="TextView"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewRenterAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewRenterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                android:text="Name"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewRenterPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewRenterPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:elevation="2dp"
                android:text="Phone Number"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>