<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background_10"
    tools:context=".YourRoomsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Rented Rooms"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchRentedRoom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:icon="@drawable/ic_baseline_search_24"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.SearchView>

    <ListView
        android:id="@+id/rentedRoomListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>